<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_medium"
    app:cardElevation="@dimen/margin_small">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivGroceryImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grocery_vertical_image_size"
                android:scaleType="centerCrop"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout

            android:paddingEnd="@dimen/margin_medium_2"
            android:paddingStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Milk"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />
            <TextView

               android:layout_weight="0.5"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/margin_medium"
                android:gravity="end"
                android:id="@+id/tvCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="x 5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />
        </LinearLayout>


            <TextView
                android:paddingEnd="@dimen/margin_medium_2"
                android:paddingStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:gravity="center_vertical"
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="For the hungry kids at home"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="@dimen/text_regular" />


    <LinearLayout
        android:paddingEnd="@dimen/margin_medium_2"
        android:paddingStart="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:src="@drawable/ic_baseline_delete_forever_24_green" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginStart="8dp"
            android:id="@+id/btnEdit"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:src="@drawable/ic_baseline_edit_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnFileUpload"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:src="@drawable/ic_baseline_cloud_upload_24" />
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>